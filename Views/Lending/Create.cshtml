@model CdSite.Models.Lending

@{
    ViewData["Title"] = "Skapa nytt lån";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Skapa nytt lån</title>
</head>
<body>

<h4>Nytt lån</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BorrowerName" class="control-label"></label>
                <input asp-for="BorrowerName" class="form-control" />
                <span asp-validation-for="BorrowerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CdId" class="control-label"></label>
                <select asp-for="CdId" class ="form-control" asp-items="ViewBag.CdId"></select>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Lägg till" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>
<br>
<div>
    <a asp-action="Index">Tillbaka till lånelistan</a>
</div>

</body>
</html>
